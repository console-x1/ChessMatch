<%- include('partials/header', { title: 'Profil - ChessMatch' }) %>

<main class="pt-16">
    <section class="min-h-screen py-12">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12 fade-in">
                <h1 class="text-4xl font-bold mb-4">Profil Joueur</h1>
                <p class="text-gray-400">Votre progression et statistiques</p>
            </div>
            
            <div class="grid lg:grid-cols-3 gap-8">
                <!-- Profile Card -->
                <div class="lg:col-span-1">
                    <div class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-2xl border border-gray-700 p-8 text-center fade-in">
                        <div class="w-32 h-32 mx-auto mb-6 rounded-full bg-gradient-to-br from-blue-500 to-red-500 flex items-center justify-center text-5xl border-4 border-gray-700">
                            <% if (user.avatar) { %>
                                <img src="<%= user.avatar %>" alt="<%= user.username %>" class="rounded-full w-full h-full object-cover">
                            <% } else { %>
                                <i class="fas fa-user-tie"></i>
                            <% } %>
                        </div>
                        <h2 class="text-2xl font-bold mb-2"><%= user.username %></h2>
                        <p class="text-gray-400 mb-4"><%= user.rank || 'Séducteur d\'IA' %></p>
                        
                        <!-- Rank Badge -->
                        <div class="inline-block px-6 py-3 bg-gradient-to-r from-yellow-600 to-yellow-500 rounded-lg mb-6">
                            <i class="fas fa-crown mr-2"></i>
                            <span class="font-bold">Rang : <%= user.rankTitle || 'Célibataire' %></span>
                        </div>
                        
                        <!-- Level Progress -->
                        <div class="text-left">
                            <div class="flex justify-between text-sm mb-2">
                                <span class="text-gray-400">Niveau <%= user.level %></span>
                                <span class="text-blue-400"><%= user.currentXP %> / <%= user.nextLevelXP %> XP</span>
                            </div>
                            <div class="w-full bg-gray-700 rounded-full h-3 overflow-hidden">
                                <div class="progress-bar h-full rounded-full" style="width: <%= (user.currentXP / user.nextLevelXP * 100).toFixed(2) %>%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Achievements and Stats -->
                <div class="lg:col-span-2 space-y-8">
                    <!-- Badges Section -->
                    <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl border border-gray-700 p-8 fade-in">
                        <h3 class="text-2xl font-bold mb-6">
                            <i class="fas fa-medal text-yellow-400 mr-2"></i>
                            Achievements
                        </h3>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <% user.achievements.forEach(achievement => { %>
                                <div class="text-center p-4 bg-gradient-to-br from-<%= achievement.color %>-600/20 to-<%= achievement.color %>-500/20 rounded-xl border border-<%= achievement.color %>-500/50 <%= achievement.unlocked ? 'achievement-unlocked' : 'achievement-locked' %>">
                                    <i class="fas fa-<%= achievement.icon %> text-4xl text-<%= achievement.color %>-400 mb-2"></i>
                                    <p class="text-xs font-semibold"><%= achievement.name %></p>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                    
                    <!-- Performance Stats -->
                    <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl border border-gray-700 p-8 fade-in">
                        <h3 class="text-2xl font-bold mb-6">
                            <i class="fas fa-chart-bar text-blue-400 mr-2"></i>
                            Statistiques de performance
                        </h3>
                        <div class="space-y-4">
                            <div>
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-400">
                                        <i class="fas fa-star text-yellow-400 mr-2"></i>Coups brillants
                                    </span>
                                    <span class="font-semibold"><%= user.stats.brilliant %>%</span>
                                </div>
                                <div class="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                                    <div class="bg-gradient-to-r from-yellow-500 to-yellow-400 h-full rounded-full" style="width: <%= user.stats.brilliant %>%"></div>
                                </div>
                            </div>
                            
                            <div>
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-400">
                                        <i class="fas fa-check-circle text-green-400 mr-2"></i>Meilleurs coups
                                    </span>
                                    <span class="font-semibold"><%= user.stats.best %>%</span>
                                </div>
                                <div class="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                                    <div class="bg-gradient-to-r from-green-500 to-green-400 h-full rounded-full" style="width: <%= user.stats.best %>%"></div>
                                </div>
                            </div>
                            
                            <div>
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-400">
                                        <i class="fas fa-thumbs-up text-blue-400 mr-2"></i>Bons coups
                                    </span>
                                    <span class="font-semibold"><%= user.stats.good %>%</span>
                                </div>
                                <div class="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                                    <div class="bg-gradient-to-r from-blue-500 to-blue-400 h-full rounded-full" style="width: <%= user.stats.good %>%"></div>
                                </div>
                            </div>
                            
                            <div>
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-400">
                                        <i class="fas fa-exclamation text-orange-400 mr-2"></i>Imprécisions
                                    </span>
                                    <span class="font-semibold"><%= user.stats.inaccuracy %>%</span>
                                </div>
                                <div class="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                                    <div class="bg-gradient-to-r from-orange-500 to-orange-400 h-full rounded-full" style="width: <%= user.stats.inaccuracy %>%"></div>
                                </div>
                            </div>
                            
                            <div>
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-400">
                                        <i class="fas fa-times-circle text-red-400 mr-2"></i>Erreurs
                                    </span>
                                    <span class="font-semibold"><%= user.stats.mistake %>%</span>
                                </div>
                                <div class="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                                    <div class="bg-gradient-to-r from-red-500 to-red-400 h-full rounded-full" style="width: <%= user.stats.mistake %>%"></div>
                                </div>
                            </div>
                            
                            <div>
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-400">
                                        <i class="fas fa-skull-crossbones text-red-700 mr-2"></i>Gaffes
                                    </span>
                                    <span class="font-semibold"><%= user.stats.blunder %>%</span>
                                </div>
                                <div class="w-full bg-gray-700 rounded-full h-2 overflow-hidden">
                                    <div class="bg-gradient-to-r from-red-800 to-red-700 h-full rounded-full" style="width: <%= user.stats.blunder %>%"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
