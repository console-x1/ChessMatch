<%- include('partials/header', { title: 'Message - ChessMatch' }) %>

<main class="pt-16">
    <section class="min-h-screen py-12">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-8 fade-in">
                <h1 class="text-4xl font-bold mb-4">Partie en cours</h1>
                <p class="text-gray-400">Simulez une conversation et recevez une évaluation en temps réel</p>
            </div>
            
            <!-- Chat Container -->
            <div class="bg-gradient-to-br from-gray-800/50 to-gray-900/50 rounded-2xl border border-gray-700 overflow-hidden fade-in">
                <!-- Chat Header -->
                <div class="bg-gradient-to-r from-blue-600/20 to-red-600/20 border-b border-gray-700 p-4">
                    <div class="flex items-center space-x-3">
                        <div class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-500 to-red-500 flex items-center justify-center">
                            <i class="fas fa-user text-xl"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold">Conversation de séduction</h3>
                            <p class="text-sm text-gray-400">
                                <i class="fas fa-circle text-green-400 text-xs mr-1"></i>En ligne
                            </p>
                        </div>
                    </div>
                </div>
                
                <!-- Messages Area -->
                <div id="chatMessages" class="h-[500px] overflow-y-auto p-6 space-y-4">
                    <!-- Initial IA Message -->
                    <div class="flex items-start space-x-3 message-animate">
                        <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-pink-500 flex items-center justify-center flex-shrink-0">
                            <i class="fas fa-robot"></i>
                        </div>
                        <div class="flex-1">
                            <div class="bg-gray-700/50 rounded-2xl rounded-tl-none p-4 max-w-md">
                                <p>Salut, tu fais quoi ce weekend ?</p>
                            </div>
                            <div class="mt-2 ml-2">
                                <span class="badge-good inline-block px-3 py-1 rounded-lg text-xs font-semibold">
                                    <i class="fas fa-thumbs-up mr-1"></i>Bon coup
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Input Area -->
                <div class="border-t border-gray-700 p-4">
                    <div class="flex space-x-3">
                        <input 
                            type="text" 
                            id="messageInput"
                            placeholder="Tapez votre réponse..." 
                            class="flex-1 bg-gray-700/50 border border-gray-600 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-500 text-white"
                        />
                        <button 
                            onclick="sendMessage()"
                            class="px-6 py-3 bg-gradient-to-r from-blue-600 to-blue-700 rounded-lg font-semibold hover:shadow-lg hover:shadow-blue-500/50 transition-all duration-300 transform hover:scale-105">
                            <i class="fas fa-paper-plane mr-2"></i>Envoyer
                        </button>
                    </div>
                    <p class="text-xs text-gray-500 mt-2 ml-1">
                        <i class="fas fa-lightbulb mr-1"></i>Conseil : Soyez authentique et stratégique
                    </p>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
